<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_launcher_background"
                app:civ_border_width="@dimen/_2sdp"
                app:civ_border_color="#E31E0C"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover"
                android:textColor="@color/black"
                android:textSize="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:layout_marginLeft="@dimen/_7sdp"/>



        </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@color/black"
                />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_95sdp"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/_50sdp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                   android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_85sdp"
                    android:id="@+id/imageView1"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="@dimen/_10sdp"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#333333"
                    app:riv_mutate_background="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    app:riv_tile_mode="repeat"
                    />

                <ImageView
                    android:id="@+id/storyimg"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/baseline_add"
                    android:layout_marginLeft="@dimen/_47sdp"
                    android:layout_marginTop="@dimen/_14sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create a Story"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_66sdp"/>

                </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_160sdp"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_85sdp"
                            android:id="@+id/recylerhome"
                            android:layout_marginTop="@dimen/_5sdp"
                           />

                    </RelativeLayout>

                </RelativeLayout>

            </HorizontalScrollView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_145sdp"
                android:background="@color/black"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dashboardrecylerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_170sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                />
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>